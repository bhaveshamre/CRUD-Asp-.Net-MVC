@model CRUD7.Models.Employee

<h1>Delete Employee</h1>

<p>Are you sure you want to delete the employee <strong>@Model.name</strong>?</p>

<form method="post" asp-action="Delete">
    @Html.AntiForgeryToken()

    <!-- Hidden input for Employee ID -->
    <input type="hidden" asp-for="empId" />

    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a href="@Url.Action("Index", "Employee")" class="btn btn-secondary">Cancel</a>
</form>
